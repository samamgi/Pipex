#include "./libft/libft.h"
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>

char	**cmd_get(char *cmd)
{
	char	**split_cmd;

	split_cmd = ft_split(cmd, ' ');
	if (!split_cmd || !split_cmd[0])
	{
		ft_putstr_fd("Command not found: ", 2);
		ft_putendl_fd(cmd, 2);
		free(split_cmd);
		exit(127);
	}
	return (split_cmd);
}

void    freesplit(char **split)
{
        int     i;

        i = 0;
        while (split[i])
        {
                free(split[i]);
                i++;
        }
        free(split);
}

void	free_split(char **split)
{
	int	i;

	i = 0;
	while (split[i])
	{
		free(split[i]);
		i++;
	}
	free(split);
}

void	error_msg(char *path, char **cmd)
{
	if (!path && ft_strchr(cmd[0], '/') != 0)
		ft_putstr_fd("No such file or directory : ", 2);
	else if (!path)
		ft_putstr_fd("command not found: ", 2);
	else if (access(path, F_OK) == 0 && access(path, X_OK) != 0)
	{
		ft_putstr_fd("Permission denied: ", 2);
		ft_putendl_fd(cmd[0], 2);
		free_split(cmd);
		free(path);
		exit(126);
	}
	if (path)
		free(path);
	ft_putendl_fd(cmd[0], 2);
	free_split(cmd);
	exit(127);
}

char	*cmd_finder(char **cmd, char **env)
{
	int		i;
	char	*tmp;
	char	*result;
	char	*slash;

	result = NULL;
	slash = ft_strjoin("/", cmd[0]);
	if (!slash)
		return (NULL);
	i = 0;
	while (env[i])
	{
		tmp = ft_strjoin(env[i], slash);
		printf("%s\n", tmp);
		if (!tmp)
			return (free(slash), NULL);
		if (access(tmp, F_OK) == 0)
		{
			result = ft_strdup(tmp);
			printf("%s\n", result);
			if (!result)
				return (free(tmp), NULL);
		}
		free(tmp);
		i++;
	}
	return (free_split(env), free(slash), result);
}

void	execute(char **cmd, char **env)
{
	int		i;
	char	*path;
	char	**tmp_path;

	tmp_path = NULL;
	path = NULL;
	i = 0;
	if (access(cmd[0], F_OK) == 0)
		path = ft_strdup(cmd[0]);
	else if (env[i])
	{
		while (env[i] && ft_strncmp(env[i], "PATH=", 5) != 0)
			i++;
		if (env[i])
			tmp_path = ft_split(&env[i][5], ':');
		if (!tmp_path)
			error_msg(path, cmd);
		path = cmd_finder(cmd, tmp_path);
	}
	if (!path)
		error_msg(path, cmd);
	printf("%s\n", path);
	execve(path, cmd, env);
	error_msg(path, cmd);
}

char    *getpath(char **env)
{
        int     i;

        i = 0;
        if (!env)
                return (NULL);
        while (env[i])
        {
                if (ft_strnstr(env[i], "PATH=", 5))
                        return (&env[i][5]);
                i++;
        }
        return (NULL);
}

int    check_commande(char *cmd, char **env)
{
        char    *path;
        char    *slash;
        char    **split_path;
        char    **argv;
        int     i;

        if (!cmd || (cmd && ft_strlen(cmd) <= 0))
        {
                //free(cmd);
                //freesplit(env);
                //ft_putstr_fd("command not found\n", 2);
                return (-1);
        }
        argv = ft_split(cmd, ' ');
        path = getpath(env);
        slash = ft_strjoin("/", argv[0]);
        split_path = ft_split(path, ':');
        if (!split_path)
        {
                free(slash);
                free(path);
                freesplit(split_path);
                freesplit(argv);
                return (-1);
        }
        path = NULL;
        i = 0;
        while (split_path[i])
        {
                path = ft_strjoin(split_path[i], slash);
                if (access(path, F_OK) == 0)
                {
                        free(slash);
                        free(path);
                        freesplit(split_path);
                        freesplit(argv);
                        return (1);
                }
                free(path);
                i++;
        }
        //path = ft_strjoin("command not found: ", argv[0]);
        //ft_putstr_fd(path, 2);
        //ft_putchar_fd('\n', 2);
        free(slash);
        //free(path);
        freesplit(split_path);
	freesplit(argv);
        return (-1);
}

static int	wait_for_child(pid_t pid)
{
	int		status[2];
	pid_t	r_waitpid;

	while (1)
	{
		r_waitpid = waitpid(-1, &status[0], 0);
		if (r_waitpid == -1)
			break ;
		if (r_waitpid == pid)
			status[1] = status[0];
	}
	if (WIFEXITED(status[1]))
		return (WEXITSTATUS(status[1]));
	else if (WIFSIGNALED(status[1]))
		return (WTERMSIG(status[1]) + 128);
	return (0);
}

int     main(int ac, char **av, char **env)
{
        int     fd1;
        int     fd2;
        int     pipefd[2];
        pid_t     pid;
        char    *err;

		if (ac != 5)
			return (1);
		if (access(av[1], F_OK) == -1)
		{
			err = ft_strjoin(av[1], ": No such file or directory\n");
                        ft_putstr_fd(err, 2);
                        free(err);
                }
		if (av[1] && (access(av[1], R_OK) == -1) && (ft_strlen(av[1]) > 0))
		{
			err = ft_strjoin(av[1], ": Permissions Denied\n");
                        ft_putstr_fd(err, 2);
                        return (free(err), -1);
		}
                if ((check_commande(av[2], env) == - 1) || (check_commande(av[3], env) == -1))
                {
                        if (check_commande(av[2], env) == -1)
                        {
                                err = ft_strjoin("Command not found: ", av[2]);
                                ft_putstr_fd(err, 2);
                                ft_putchar_fd('\n', 2);
                                free(err);
                        }
                        if (check_commande(av[3], env) == -1)
                        {
                                err = ft_strjoin("Command not found: ", av[3]);
                                ft_putstr_fd(err, 2);
                                ft_putchar_fd('\n', 2);
                                free(err);
                        }
                        return (-1);
                }
		if ((access(av[ac - 1], F_OK) == 0) && (access(av[ac - 1], W_OK) == -1))
		{
	               err = ft_strjoin(av[ac - 1], ": Permissions Denied\n");
                       ft_putstr_fd(err, 2);
                       return (free(err), -1);
		}
		if (av[ac - 1] && (ft_strlen(av[ac - 1]) == 0))
		{
                        err = ft_strjoin(av[ac - 1], ": No such file or directory\n");
                        ft_putstr_fd(err, 2);
                        return (free(err), -1);
                }
                fd2 = open(av[ac - 1], O_WRONLY | O_CREAT | O_TRUNC, 0644);
		if (fd2 == -1)
                {
		       	err = ft_strjoin(av[ac - 1], ": Permissions Denied\n");
		       	ft_putstr_fd(err, 2);
		       	free(err);
                }
		pipe(pipefd);
		if (pipe(pipefd) == -1)
			return (1);
                pid = fork();
                if (pid == 0)
                {
			fd1 = open(av[1], O_RDONLY, 0644);
			close(pipefd[0]);
			if (fd1 == -1)
			{
				close(pipefd[1]);
				exit(1);
			}
                        if (dup2(fd1, 0) == -1)
			{
				close(fd1);
				exit(EXIT_FAILURE);
			}
			close(fd1);
                        if (dup2(pipefd[1], 1) == -1)
			{
				close(pipefd[1]);
				exit(EXIT_FAILURE);
			}
			close(pipefd[1]);
			execute(cmd_get(av[2]), env);
		}
                pid = fork();
                if (pid == 0)
                {
			fd2 = open(av[4], O_WRONLY | O_CREAT | O_TRUNC, 0644);
                        close(pipefd[1]);
			if (fd2 == -1)
			{
				close(pipefd[0]);
				exit(EXIT_FAILURE);
			}
			if (dup2(fd2, 1) == -1)
			{
				close(fd2);
				exit(EXIT_FAILURE);
			}
			close(fd2);
                        if (dup2(pipefd[0], 0) == -1)
			{
				close(pipefd[0]);
				exit(EXIT_FAILURE);
			}
			close(pipefd[0]);
			execute(cmd_get(av[3]), env);
		}
		if (fd2 != -1)
			close(fd2);
		if (fd1 != -1)
			close(fd1);
                close(pipefd[1]);
                close(pipefd[0]);
		if (fd1 != -1)
		{
                	wait(NULL);
		}
		wait(NULL);
        return (0);
}
